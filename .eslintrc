{
    "extends": "standard",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "globals": {
        "Mixcloud": true
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4],
        "quotes": [
            2,
            "single"
        ],
        "strict": [
            2,
            "never"
        ],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2
    },
    "plugins": [
        "react"
    ]
}
